{
  "name": "event-listing",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@dhis2/d2-i18n": "^1.0.4",
    "@dhis2/d2-i18n-extract": "^1.0.7",
    "@dhis2/d2-i18n-generate": "^1.0.19",
    "d2-manifest": "^1.0.0",
    "postcss-rtl": "^1.3.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-scripts": "2.0.5",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.0.0",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.3.3"
  },
  "scripts": {
    "extract-pot": "d2-i18n-extract -p src/ -o i18n/",
    "localize": "yarn extract-pot && d2-i18n-generate -n NAMESPACE -p ./i18n/ -o ./src/locales/",
    "prestart": "yarn localize && d2-manifest package.json ./public/manifest.webapp",
    "start": "react-scripts start",
    "prebuild": "yarn localize",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "format": "code-style"
  },
  "devDependencies": {
    "@dhis2/code-style": "MAKOSCAFEE/code-style#master",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "flow-bin": "^0.84.0",
    "husky": "^1.1.2",
    "react-test-renderer": "^16.5.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commit-style",
      "pre-commit": "npm run format"
    }
  },
  "manifest.webapp": {
    "name": "Tracker Report App",
    "description": "Tracker Report app that list and show event trends",
    "icons": {
      "48": "icon.png"
    },
    "developer": {
      "url": "",
      "name": "HiSP Tanzania"
    },
    "dhis2": {
      "apiVersion": "30"
    },
    "activities": {
      "dhis": {
        "href": ".."
      }
    }
  }
}
